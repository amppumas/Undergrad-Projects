NUEMIL	FCC	"NUEVE MIL0"

	CLR $0025 *PARA IDENTIFICAR DONDE ESTA EL NUMERO
	CLR $002A *IDEM
	LDY #$0060
	LDAA #$ff
*******BORRA LA PANTALLA DESDE $0060 a $00e0 ************
BORRAR
	STAA 0,Y
	INY
	CPY #$00e0
	BEQ MILES
	JMP BORRAR
********EMPIEZA POR IMPRIMIR LOS MILES*************
MILES
	LDY #0
	LDX #0
	LDD #$00b0
	STD PRINTADD
	LDAA DIR_BASE,Y
	CMPA #1
	BEQ ONET
	CMPA #2
	BEQ TWOT
	CMPA #3
	BEQ THREET
	CMPA #4
	BEQ FOURT
	CMPA #5
	BEQ FIVET
	CMPA #6
	BEQ SIXT
	CMPA #7
	BEQ SEVENT
	CMPA #8
	BEQ EIGHTT
	CMPA #9
	BEQ NINET
	JMP CIENTOS *QUIERE DECIR QUE ES 0

ONET	
	LDX #MIL
	JSR PRINT
	JMP CIENTOS

TWOT	
	LDX #DOSMIL
	JSR PRINT
	JMP CIENTOS

THREET	
	LDX #TREMIL
	JSR PRINT
	JMP CIENTOS

FOURT	
	LDX #CUAMIL
	JSR PRINT
	JMP CIENTOS

FIVET	
