	JMP CIENTOS

SEVENT	
	LDX #SIEMIL
	JSR PRINT
	JMP CIENTOS

EIGHTT	
	LDX #OCHMIL
	JSR PRINT
	JMP CIENTOS

NINET	
	LDX #NUEMIL
	JSR PRINT
	JMP CIENTOS

************EMPIEZAN LOS CIENTOS****************
CIENTOS
	INY
	LDD #$00c0
	STD PRINTADD
	LDAA DIR_BASE,Y
	CMPA #1
	BEQ ONEH
	CMPA #2
	BEQ TWOH
	CMPA #3
	BEQ THREEH
	CMPA #4
	BEQ FOURH
	CMPA #5
	BEQ FIVEH
	CMPA #6
	BEQ SIXH
	CMPA #7
	BEQ SEVENH
	CMPA #8
	BEQ EIGHTH
	CMPA #9
	BEQ NINEH
	JMP DECENAS
ONEH
	INY
	LDAA DIR_BASE,Y
	CMPA #0
	BEQ UN_CERO
	LDX #CIENTO
	JSR PRINT
	DEY
	JMP DECENAS

UN_CERO	
	INY
	LDAA DIR_BASE,Y
	CMPA #0
	BEQ DOS_CEROS
	LDX #CIENTO
	JSR PRINT
	DEY
	DEY
	JMP DECENAS

